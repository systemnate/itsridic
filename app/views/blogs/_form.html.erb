<%= form_for @blog do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, :class => "tinymce", :rows => 10, :cols => 40 %>
  </div>

  <div>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

<%= tinymce %>
