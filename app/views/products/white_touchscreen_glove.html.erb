  <div class="title text-center">
    <h1>Off-White Touchscreen Glove</h1>
    <hr />
  </div>
  <div class="row">
    <div class="col-sm-4 product-image">
      <%= image_tag('touchscreenglovewhite.jpg', style: 'height: 300px;') %>
    </div>

