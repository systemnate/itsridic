<h1 class="blog-title">Blogs Tagged with '<%= @tag.name %>'</h1>

<table class="table table-striped">
  <thead>
    <th>Title</th>
    <th>Body</th>
  </thead>
  <tbody>
    <% @tag.blogs.each do |blog| %>
      <tr>
        <td><%= link_to truncate(blog.title, length: 50, separator: " "), blog_path(blog) %></td>
        <td><%= truncate(sanitize(strip_tags(blog.body)), length: 100, separator: " ") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
