<h1 class="blog-title">Blogs Tagged with '<%= @tag.name %>'</h1>

<table class="table table-striped">
  <thead>
    <th>Title</th>
    <th>Body</th>
  </thead>
  <tbody>
    <% @tag.blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title, blog_path(blog) %></td>
        <td><%= sanitize(strip_tags(blog.body)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
